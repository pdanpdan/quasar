$media-avatar-box-shadow    ?= $shadow-1

img
  &.responsive
    max-width 100%
    height auto
  &.avatar
    width 50px
    height 50px
    border-radius 50%
    box-shadow $media-avatar-box-shadow
    vertical-align middle

.q-video
  position relative
  overflow hidden
  border-radius inherit

  iframe, object, embed
    width 100%
    height 100%
