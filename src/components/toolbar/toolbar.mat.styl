$toolbar-title-font-size   ?= 1.15rem
$toolbar-padding           ?= 4px 12px

.q-toolbar
  padding $toolbar-padding
  min-height $toolbar-min-height
  display flex
  overflow hidden
  flex-direction row
  align-items center
  width 100%
  position relative
  color $toolbar-color
  background $toolbar-background

  > .q-btn
    margin 0 .2rem
    padding .2rem
    &:first-child
      margin-left 0
    &:last-child
      margin-right 0

  i
    line-height 1

.q-toolbar-inverted
  color $toolbar-background
  background transparent

.q-toolbar-title
  flex 1
  min-width 0
  max-width 100%
  align-items center
  font-size $toolbar-title-font-size
  font-weight 500
  text-overflow ellipsis
  white-space nowrap
  overflow hidden
  padding 0 12px
