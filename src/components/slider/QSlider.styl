.q-slider
  position: relative
  color: $primary
  color: var(--q-color-primary)
  outline: 0

  &__track-container
    background: rgba(0,0,0,.26)

  &__track
    background: currentColor

  &__track-markers
    color: #000

    &:after
      content: ''
      position: absolute
      right: 0
      top: 0
      bottom: 0
      height: 2px
      width: 2px
      background: currentColor

  &__thumb-container
    width: 20px
    height: 20px
    outline: 0

  &__thumb
    top: 0
    left: 0
    transform: scale(1)
    transition: transform .18s ease-out, fill .18s ease-out, stroke .18s ease-out
    stroke-width: 3.5
    stroke: currentColor

    path
      stroke: currentColor
      fill: currentColor

  &__focus-ring
    width: 20px
    height: 20px
    transition: transform 266.67ms ease-out, opacity 266.67ms ease-out, background-color 266.67ms ease-out
    border-radius: 50%
    opacity: 0
    transition-delay: .14s

  &__arrow
    position: absolute
    width: 0
    height: 0
    transform-origin: 50% 50%
    transition: transform 100ms ease-out

  &__pin
    transition: transform 100ms ease-out
    z-index: 1
    white-space: nowrap

    &-text-container
      min-height: 25px
      padding: 2px 8px
      border-radius: $generic-border-radius
      background: currentColor
      position: relative
      text-align: center

    &-text
      color: #fff
      font-size: 12px

  &--editable
    cursor: grab

  &--no-value
    .q-slider__thumb, .q-slider__track
      visibility: hidden

  &--focus
    .q-slider__thumb
      transform: scale(1)

  &--focus, body.desktop &.q-slider--editable:hover
    .q-slider__focus-ring
      background: currentColor
      transform: scale3d(1.55, 1.55, 1)
      opacity: .25
    .q-slider__thumb, .q-slider__track
      visibility: visible

  &--active
    cursor: grabbing

    .q-slider__thumb
      transform: scale(1.5)

    .q-slider__focus-ring, &.q-slider--label .q-slider__thumb
      transform: scale(0) !important

  &--dark
    .q-slider__track-container
      background: rgba(#fff, .3)
    .q-slider__track-markers
      color: #fff

.q-slider--horizontal
  width: 100%
  height: 40px

  .q-slider__track-container
    top: 50%
    margin-top: -1px
    width: 100%
    height: 2px

  .q-slider__track
    will-change: width, left
    top: 0
    bottom: 0

  .q-slider__track-markers
    background-image: repeating-linear-gradient(to right, currentColor, currentColor 2px, transparent 0, transparent)

  .q-slider__thumb-container
    top: 50%
    margin-top: -10px
    transform: translateX(-10px) /* rtl:ignore */
    will-change: left

  .q-slider__arrow
    top: 19px
    left: 4px
    border-right: 6px solid transparent
    border-left: 6px solid transparent
    border-top: 6px solid currentColor
    transform: scale(0) translateY(0)

  .q-slider__pin
    bottom: 0
    right: 0
    transform: scale(0) translateY(0)
    will-change: left

    &-text-container
      right: -50%

  &.q-slider--inactive
    .q-slider__thumb-container
      transition: left .28s, right .28s
    .q-slider__track
      transition: width .28s, left .28s, right .28s

  body.desktop &.q-slider--editable:hover
    .q-slider__pin,
    .q-slider__arrow
      transform: scale(1) translateY(-25px)

  &.q-slider--label
    &.q-slider--active, .q-slider--focus, &.q-slider--label-always
      .q-slider__pin,
      .q-slider__arrow
        transform: scale(1) translateY(-25px)

  &.q-slider--reversed
    .q-slider__thumb-container
      transform: translateX(10px) /* rtl:ignore */

  &.q-slider--dense
    height: 20px

.q-slider--vertical
  width: 40px
  height: 200px

  .q-slider__track-container
    left: 50%
    margin-left: -1px
    height: 100%
    width: 2px

  .q-slider__track
    will-change: height, top
    left: 0
    right: 0

  .q-slider__track-markers
    background-image: repeating-linear-gradient(to bottom, currentColor, currentColor 2px, transparent 0, transparent)

  .q-slider__thumb-container
    left: 50%
    margin-left: -10px
    transform: translateY(-10px)
    will-change: top

  .q-slider__arrow
    left: 15px
    top: 4px
    border-top: 6px solid transparent
    border-bottom: 6px solid transparent
    border-right: 6px solid currentColor
    transform: scale(0) translateX(-20px)

  .q-slider__pin
    top: 50%
    left: 20px
    height: 0
    transform: scale(0) translateX(-20px)
    will-change: top
    transform-origin: left center

    &-text-container
      transform: translateY(-50%)

  &.q-slider--inactive
    .q-slider__thumb-container
      transition: top .28s, bottom .28s
    .q-slider__track
      transition: height .28s, top .28s, bottom .28s

  body.desktop &.q-slider--editable:hover
    .q-slider__pin,
    .q-slider__arrow
      transform: scale(1) translateX(5px)

  &.q-slider--label
    &.q-slider--active, .q-slider--focus, &.q-slider--label-always
      .q-slider__pin,
      .q-slider__arrow
        transform: scale(1) translateX(5px)

  &.q-slider--reversed
    .q-slider__thumb-container
      transform: translateY(10px)

  &.q-slider--dense
    width: 20px
