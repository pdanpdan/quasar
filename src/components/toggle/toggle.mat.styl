$toggle-width       = 44px
$toggle-height      = 24px
$toggle-handle-size = round($toggle-width / 2)

.q-toggle-base
  transition all .45s cubic-bezier(.23, 1, .32, 1)
  width 100%
  height 14px
  border-radius 30px
  background-color currentColor
  opacity .5

.q-toggle-handle
  background-color rgb(245, 245, 245)
  transition all 450ms cubic-bezier(.23, 1, .32, 1)
  border-radius 50%
  position absolute
  top 1px
  left 0
  width $toggle-handle-size
  height $toggle-handle-size
  line-height $toggle-handle-size

.q-toggle .q-option-inner
  height $toggle-height
  width $toggle-width
  min-width $toggle-width
  padding 5px 0
  &.active
    .q-toggle-handle
      background-color currentColor
      left ($toggle-width - $toggle-handle-size)
    .q-toggle-icon
      color white
