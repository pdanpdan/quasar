$radio-size         ?= 24px

.q-radio-unchecked, .q-radio-checked
  height $radio-size
  width $radio-size
  font-size $radio-size
  transition all .45s cubic-bezier(.23, 1, .32, 1)
  opacity 0

.q-radio-checked
  transform-origin 50% 50% 0
  transform scale(0)

.q-radio
  display inline-block
  vertical-align middle
  height $radio-size
  width $radio-size
  min-width $radio-size
  color $grey-7

  &.active
    color $primary
    .q-radio-checked
      transform scale(1)
      opacity 1

  input
    display none !important

body.desktop .q-radio:focus input + div:before
  box-shadow $form-focus-box-shadow
