.q-select
  &--without-input
    .q-field__control
      cursor pointer
  &--with-input
    .q-field__control
      cursor text

  &__input
    border 0
    outline 0 !important // needed for FF
    background transparent
    min-width 50px !important
    padding 0

    &--padding
      padding-left 4px

  &__dropdown-icon
    cursor pointer

  &__dialog
    width 95vh !important
    max-height calc(100% - 48px) !important
    background white
    display flex
    flex-direction column

  &__menu--dark
    color white
    background $grey-9

.platform-ios
  .q-dialog__inner--top
    .q-select__dialog
      max-height calc(60% - 48px) !important
